<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nickteck.schoolapp.fragment.DashboardFragment"
    android:id="@+id/frameMainLayout"
    android:background="@color/graylight">


    <hu.aut.utillib.circular.widget.CircularFrameLayout
        android:id="@+id/simple_reveal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_profile_bg_size"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|top">

            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/dashboard_bg"
                    tools:ignore="contentDescription"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ldtProfile">

                    <LinearLayout
                        android:layout_width="@dimen/dashboard_profile_pic_size"
                        android:layout_height="@dimen/dashboard_profile_pic_size"
                        android:layout_gravity="center"
                        android:id="@+id/ldtImage"
                        android:visibility="visible"
                        android:background="@drawable/circle_view">

                        <com.stfalcon.multiimageview.MultiImageView
                            android:id="@+id/profile_image_dashBoard"
                            android:layout_width="@dimen/dashboard_profile_pic_size"
                            android:layout_height="@dimen/dashboard_profile_pic_size"
                            android:src="@drawable/default_image"
                           android:padding="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ldtChildName"
                            android:visibility="visible">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NAME M"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dashboard_name_size"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtChildName"
                           />
                        </LinearLayout>
                        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dashboard_name_padding">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ldtMobileNumber"
                            android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="#f0efef"
                            android:textSize="@dimen/dashboard_phone_size"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/txtMobileNumber"
                          />
                        </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </hu.aut.utillib.circular.widget.CircularFrameLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dashboard_notification_size"
        android:paddingLeft="@dimen/dashboard_notification_padding"
        android:paddingRight="@dimen/dashboard_notification_padding"
        android:id="@+id/viewNotification">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_notification_card_padding"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dashboard_notification_inside_card_padding">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dashboard_notification_bell_size"
                    android:layout_height="@dimen/dashboard_notification_bell_size"
                    android:src="@drawable/notif"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our School notification"
                    android:paddingLeft="@dimen/dashboard_notification_text_padding"
                    android:textSize="@dimen/dashboard_notification_text_size"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:textColor="#808080"
                    android:paddingLeft="@dimen/dashboard_notification_text_padding"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNotification"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dashboard_selection_padding"
            android:paddingEnd="@dimen/dashboard_layout_padding_top">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:paddingLeft="@dimen/dashboard_selection_text_padding"
                android:paddingRight="@dimen/dashboard_selection_text_padding"
                android:background="@android:color/white"
               android:layout_alignParentEnd="true"
                app:cardCornerRadius="5dp"
                android:id="@+id/ldtChoiceChildren" >
                <LinearLayout
                    android:id="@+id/all_children_dialoge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dashboard_selection_padding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="All Children"
                        android:textSize="@dimen/dashboard_layout_text_size"
                        android:id="@+id/txtChooseChild"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
           >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


            <LinearLayout
                android:layout_width="@dimen/dashboard_layout_size"
                android:layout_height="@dimen/dashboard_layout_size"
                android:id="@+id/about_child">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:cardCornerRadius="5dp"
                    android:layout_gravity="center">

                    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dashboard_layout_image_size"
                            android:layout_height="@dimen/dashboard_layout_image_size"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/dashboard_layout_padding"
                            android:src="@drawable/schoolchild" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="About Child"
                            android:textStyle="bold"
                            android:textSize="@dimen/dashboard_layout_text_size"
                            android:paddingTop="@dimen/dashboard_layout_padding"/>
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">
                            <TextView
                                android:id="@+id/txtBrodgeIcon"
                                android:layout_width="@dimen/dashboard_badge_size"
                                android:layout_height="@dimen/dashboard_badge_size"
                                android:background="@drawable/item_count"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:text="1"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/dashboard_layout_size"
                    android:layout_height="@dimen/dashboard_layout_size"
                    android:id="@+id/announcement">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dashboard_layout_image_size"
                                android:layout_height="@dimen/dashboard_layout_image_size"
                                android:src="@drawable/annoncement"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="Annoncement"
                                android:textStyle="bold"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true">
                            <TextView
                                android:id="@+id/txtAnnouncementBrodgeIcon"
                                android:layout_width="@dimen/dashboard_badge_size"
                                android:layout_height="@dimen/dashboard_badge_size"
                                android:background="@drawable/item_count"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:text="1"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/dashboard_layout_size"
                    android:layout_height="@dimen/dashboard_layout_size"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dashboard_layout_image_size"
                                android:layout_height="@dimen/dashboard_layout_image_size"
                                android:src="@drawable/bustrack"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="Bus Track"
                                android:textStyle="bold"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:paddingTop="30dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/dashboard_layout_size"
                    android:layout_height="@dimen/dashboard_layout_size"
                    android:id="@+id/about_event">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dashboard_layout_image_size"
                                android:layout_height="@dimen/dashboard_layout_image_size"
                                android:src="@drawable/events"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="Events"
                                android:textStyle="bold"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                        </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_alignParentEnd="true">
                                <TextView
                                    android:id="@+id/txtBrodgeIcon2"
                                    android:layout_width="@dimen/dashboard_badge_size"
                                    android:layout_height="@dimen/dashboard_badge_size"
                                    android:background="@drawable/item_count"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:text="1"
                                    android:textSize="@dimen/dashboard_layout_text_size"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/dashboard_layout_size"
                    android:layout_height="@dimen/dashboard_layout_size"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dashboard_layout_image_size"
                                android:layout_height="@dimen/dashboard_layout_image_size"
                                android:src="@drawable/calender"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="Calendar"
                                android:textStyle="bold"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/dashboard_layout_size"
                    android:layout_height="@dimen/dashboard_layout_size"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dashboard_layout_image_size"
                                android:layout_height="@dimen/dashboard_layout_image_size"
                                android:src="@drawable/questions"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="Questions"
                                android:textStyle="bold"
                                android:textSize="@dimen/dashboard_layout_text_size"
                                android:paddingTop="@dimen/dashboard_layout_padding"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout >
