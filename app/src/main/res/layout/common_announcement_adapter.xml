<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
                android:id="@+id/card_view_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/common_annouce_title"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="HOME WORK"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_background_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/teacher_staff_linear"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher Name :"
                        android:textColor="@color/text_color_grey"
                        android:layout_gravity="center"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="@dimen/common_annouce_teacher"/>

                    <TextView
                        android:id="@+id/staff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARAVINDRAJ "
                        android:textStyle="bold"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/common_annouce_teacher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:paddingLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/announcemnt_message"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AravindRaj ddfdfdf fdf dfd fdfdfd dfdfasfg sgfgfd dfgdfg sgsdfg fgfgfgfgfgfgfgfgfgfgfg "
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_color_grey"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/common_annouce_message"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_background_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/date_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jun 30,2018 17:20 PM"
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/common_annouce_date_time"/>

                        <!--<TextView
                            android:id="@+id/time"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11:40 PM"
                            android:layout_weight="0.25"
                            android:gravity="start"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/common_annouce_date_time"/>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>