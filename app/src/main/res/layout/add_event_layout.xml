<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/event_header_txt_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:padding="@dimen/event_title_padding"
            android:paddingTop="@dimen/event_title_padding"
            android:paddingBottom="@dimen/event_title_padding"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtDateFormat"
            android:textStyle="bold"
            android:textSize="@dimen/event_title_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/event_heading_padding"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/event_heading_padding"
            android:paddingTop="@dimen/event_title_padding"
            android:paddingBottom="@dimen/event_title_padding">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/txtHeader"
                android:maxLines="1"
                android:textSize="@dimen/event_title_size1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textColor="@android:color/black"
                android:id="@+id/txtContent"
                android:maxLines="2"
                android:paddingTop="@dimen/event_heading_padding"
                android:textSize="@dimen/event_content_size"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>